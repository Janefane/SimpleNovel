<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@drawable/bg_list_item_white">

    <ImageView
        android:id="@+id/item_home_local_novel_pic"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitStart"
        android:src="@drawable/pic_default_novel"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_home_local_novel_pic"
        android:layout_alignTop="@+id/item_home_local_novel_pic"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_home_local_novel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="18dp"
            android:textColor="#333333"
            tools:text="@string/app_name" />
        <TextView
            android:id="@+id/item_home_local_novel_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#999999"
            tools:text="@string/app_name" />
        <TextView
            android:id="@+id/item_home_local_novel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#999999"
            tools:text="@string/app_name" />
        <TextView
            android:id="@+id/item_home_local_novel_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#999999"
            tools:text="@string/app_name" />
        <TextView
            android:id="@+id/item_home_local_novel_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#999999"
            tools:text="@string/app_name" />
        <TextView
            android:id="@+id/item_home_local_novel_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#999999"
            tools:text="@string/app_name" />

    </LinearLayout>

</RelativeLayout>